<Window x:Class="Dongjin.Windows.MenuWindow.DailyWork.Print.PrintTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dongjin.Windows.MenuWindow.DailyWork.Print"
        mc:Ignorable="d"
        Title="PrintTransactionWindow" Height="500" Width="720">
    <StackPanel
        Orientation="Vertical"
        >
        <Button
            Margin="0 5 0 0"
            Content="인쇄 하기"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            />
        <ScrollViewer
            Name="SV"
            CanContentScroll="True"
            VerticalScrollBarVisibility="Visible"
            >
            <StackPanel
                Orientation="Vertical"
                >
                
                <Label
                    Foreground="Black"
                    Background="White"
                    >
                    <TextBlock            
                        TextDecorations="Underline"
                        Text="거래 명세서"
                    />
                </Label>
                <DataGrid
                    x:Name="DG"
                    RowHeaderWidth="0"
                    AutoGenerateColumns="False"
                    VerticalScrollBarVisibility="Hidden"
                    CanUserAddRows="False"
                    GridLinesVisibility="None"
                >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="품명" Binding="{Binding ProductName}" IsReadOnly="True" Width="8*">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource CellCenterAlign}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="수량" Binding="{Binding ProductCount}" IsReadOnly="True" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource CellCenterAlign}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="단가" Binding="{Binding Price, StringFormat=\{0:N0\}}" IsReadOnly="True" Width="3*">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource CellCenterAlign}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="금액" Binding="{Binding DiscountPrice, StringFormat=\{0:N0\}}" IsReadOnly="True" Width="3*">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource CellCenterAlign}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="추가1" Binding="{Binding AppendOption1}" IsReadOnly="True" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource CellCenterAlign}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="추가2" Binding="{Binding AppendOption2}" IsReadOnly="True" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style BasedOn="{StaticResource CellCenterAlign}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Window>
