<Window x:Class="Dongjin.Controls.ClientControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dongjin.Controls"
        mc:Ignorable="d"
        Title="ClientControl" Height="140" Width="300"
        >
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock 
                x:Name="ClientCodeTB"
                Text="거래처코드: ?"
                FontSize="20"
                />
            <TextBlock 
                x:Name="ClientNameTB"
                Text="상호: ?"
                FontSize="20"
                FontWeight="Bold"
                />
            <TextBlock 
                x:Name="PhoneTB"
                Text="전화번호: ?"
                FontSize="20"
                />
            <TextBlock 
                x:Name="CurrentLeftMoneyTB"
                Text="현재미수금: ?"
                FontSize="20"
                />
        </StackPanel>
    </Grid>
</Window>
