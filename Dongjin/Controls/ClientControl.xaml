<UserControl x:Class="Dongjin.Controls.ClientControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dongjin.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="800">
    <Grid Background="Black">
        <StackPanel Margin="5"
                    Orientation="Horizontal">
            <Label
                x:Name="ClientCodeLB"
                FontSize="20"
                />
            <Label
                Content="/"
                />
            <Label
                x:Name="ClientNameLB"
                FontSize="20"
                FontWeight="Bold"
                />
            <Label
                Content="/"
                />
            <Label 
                x:Name="PhoneLB"
                FontSize="20"
                />
            <Label
                Content="/"
                />
            <Label 
                x:Name="CurrentLeftMoneyLB"
                FontSize="20"
                />
        </StackPanel>
    </Grid>
</UserControl>
